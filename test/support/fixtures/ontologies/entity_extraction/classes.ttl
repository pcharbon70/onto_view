@prefix ex: <http://example.org/entities#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# Ontology declaration
<http://example.org/entities#> a owl:Ontology ;
    rdfs:label "Entity Extraction Test Ontology"@en ;
    rdfs:comment "Test ontology for OWL entity extraction (Task 1.3)"@en .

# OWL Classes (Task 1.3.1.1 - Detect owl:Class)
ex:Person a owl:Class ;
    rdfs:label "Person"@en ;
    rdfs:comment "A human being"@en .

ex:Organization a owl:Class ;
    rdfs:label "Organization"@en ;
    rdfs:comment "A group of people with a purpose"@en .

ex:Employee a owl:Class ;
    rdfs:label "Employee"@en ;
    rdfs:comment "A person employed by an organization"@en ;
    rdfs:subClassOf ex:Person .

ex:Manager a owl:Class ;
    rdfs:label "Manager"@en ;
    rdfs:comment "An employee who manages others"@en ;
    rdfs:subClassOf ex:Employee .

ex:Department a owl:Class ;
    rdfs:label "Department"@en ;
    rdfs:comment "A division within an organization"@en .

# RDFS Class (for compatibility testing)
ex:LegacyClass a rdfs:Class ;
    rdfs:label "Legacy Class"@en ;
    rdfs:comment "An RDFS class for backward compatibility testing"@en .

# Object Properties (for Task 1.3.2 - not extracted by Task 1.3.1)
ex:worksFor a owl:ObjectProperty ;
    rdfs:label "works for"@en ;
    rdfs:domain ex:Employee ;
    rdfs:range ex:Organization .

ex:manages a owl:ObjectProperty ;
    rdfs:label "manages"@en ;
    rdfs:domain ex:Manager ;
    rdfs:range ex:Employee .

# Data Properties (for Task 1.3.3 - not extracted by Task 1.3.1)
ex:hasName a owl:DatatypeProperty ;
    rdfs:label "has name"@en ;
    rdfs:domain ex:Person ;
    rdfs:range xsd:string .

ex:hasAge a owl:DatatypeProperty ;
    rdfs:label "has age"@en ;
    rdfs:domain ex:Person ;
    rdfs:range xsd:integer .

# Named Individual (for Task 1.3.4 - not extracted by Task 1.3.1)
ex:JohnDoe a owl:NamedIndividual, ex:Manager ;
    rdfs:label "John Doe"@en ;
    ex:hasName "John Doe" ;
    ex:hasAge 42 .
